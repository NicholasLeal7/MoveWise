<!DOCTYPE html>
<html lang="pt-br">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Move Wise - Comece Sua Jornada</title>

  <!-- Favicon -->
  <link rel="icon" type="image/x-icon" href="/media/favicon.jpg">

  <!-- Bootstrap 5 -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <!-- Bootstrap Icons -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
  <!-- AOS - Animate On Scroll -->
  <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">

  <style>
    :root {
      --primary-color: #0d6efd;
      --primary-light: rgba(13, 110, 253, 0.1);
      --text-color: #2c3e50;
    }

    body {
      background: linear-gradient(135deg, var(--primary-light) 0%, #ffffff 100%);
      min-height: 100vh;
      overflow-x: hidden;
      color: var(--text-color);
    }

    .page-container {
      min-height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 2rem;
      position: relative;
    }

    .register-container {
      background: rgba(255, 255, 255, 0.9);
      backdrop-filter: blur(10px);
      border-radius: 2rem;
      overflow: hidden;
      box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
      width: 100%;
      max-width: 500px;
      position: relative;
      z-index: 1;
    }

    .progress-steps {
      display: flex;
      justify-content: space-between;
      margin-bottom: 2rem;
      position: relative;
    }

    .progress-step {
      width: 40px;
      height: 40px;
      border-radius: 50%;
      background: white;
      display: flex;
      align-items: center;
      justify-content: center;
      font-weight: bold;
      color: var(--text-color);
      border: 2px solid var(--primary-light);
      position: relative;
      z-index: 1;
    }

    .progress-step.active {
      background: var(--primary-color);
      color: white;
      border-color: var(--primary-color);
    }

    .progress-step.completed {
      background: #28a745;
      color: white;
      border-color: #28a745;
    }

    .progress-line {
      position: absolute;
      top: 50%;
      left: 40px;
      right: 40px;
      height: 2px;
      background: var(--primary-light);
      transform: translateY(-50%);
    }

    .progress-line-fill {
      position: absolute;
      top: 0;
      left: 0;
      height: 100%;
      background: var(--primary-color);
      transition: width 0.3s ease;
    }

    .form-floating {
      margin-bottom: 1rem;
    }

    .form-floating > .form-control {
      padding: 1.5rem 1rem;
      height: calc(3.5rem + 2px);
      line-height: 1.25;
      border: 2px solid #e9ecef;
      border-radius: 1rem;
      transition: all 0.3s ease;
    }

    .form-floating > label {
      padding: 1rem;
    }

    .form-floating > .form-control:focus {
      border-color: var(--primary-color);
      box-shadow: 0 0 0 0.25rem var(--primary-light);
    }

    .btn {
      border-radius: 1rem;
      padding: 0.8rem 1.5rem;
      transition: all 0.3s ease;
    }

    .btn-primary {
      background: linear-gradient(135deg, var(--primary-color) 0%, #0099ff 100%);
      border: none;
      position: relative;
      overflow: hidden;
    }

    .btn-primary::after {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      width: 200%;
      height: 100%;
      background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
      transform: translateX(-100%);
    }

    .btn-primary:hover::after {
      animation: shine 1.5s infinite;
    }

    @keyframes shine {
      to { transform: translateX(50%); }
    }

    .form-check-input:checked {
      background-color: var(--primary-color);
      border-color: var(--primary-color);
    }

    .floating-elements {
      position: absolute;
      width: 100%;
      height: 100%;
      pointer-events: none;
      overflow: hidden;
    }

    .floating-element {
      position: absolute;
      font-size: 1.5rem;
      color: var(--primary-color);
      opacity: 0.1;
      animation: floatElement 8s infinite;
    }

    @keyframes floatElement {
      0%, 100% { transform: translate(0, 0) rotate(0deg); }
      25% { transform: translate(10px, -10px) rotate(5deg); }
      50% { transform: translate(0, -20px) rotate(0deg); }
      75% { transform: translate(-10px, -10px) rotate(-5deg); }
    }

    .register-content {
      padding: 2.5rem;
    }

    .welcome-message {
      text-align: center;
      margin-bottom: 2rem;
    }

    .welcome-message h4 {
      background: linear-gradient(135deg, var(--primary-color) 0%, #0099ff 100%);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      font-weight: bold;
      margin-bottom: 0.5rem;
    }

    @media (max-width: 576px) {
      .page-container {
        padding: 1rem;
      }

      .register-container {
        border-radius: 1.5rem;
      }

      .register-content {
        padding: 1.5rem;
      }
    }
  </style>
</head>

<body>
  <div class="floating-elements">
    <i class="bi bi-person-check floating-element" style="top: 15%; left: 10%;"></i>
    <i class="bi bi-rocket floating-element" style="top: 25%; right: 15%;"></i>
    <i class="bi bi-compass floating-element" style="bottom: 20%; left: 15%;"></i>
    <i class="bi bi-stars floating-element" style="bottom: 30%; right: 10%;"></i>
  </div>

  <div class="page-container">
    <div class="register-container" data-aos="zoom-in">
      <div class="register-content">
        <div class="welcome-message">
          <h4>🌟 Comece Sua Jornada</h4>
          <p class="text-muted">Junte-se ao Move Wise e descubra um mundo de oportunidades</p>
        </div>

        <div class="progress-steps mb-4">
          <div class="progress-line">
            <div class="progress-line-fill" style="width: 0%"></div>
          </div>
          <div class="progress-step active" data-step="1">1</div>
          <div class="progress-step" data-step="2">2</div>
          <div class="progress-step" data-step="3">3</div>
        </div>

        <form id="registerForm" method="POST" action="/register" onsubmit="return validateAndSubmit(event)">
          <div class="form-floating mb-3">
            <input type="text" class="form-control" id="nome" name="name" placeholder="Nome Completo" required />
            <label for="nome"><i class="bi bi-person text-primary"></i> Nome Completo</label>
          </div>

          <div class="form-floating mb-3">
            <input type="email" class="form-control" id="email" name="email" placeholder="Email" required />
            <label for="email"><i class="bi bi-envelope text-primary"></i> Email</label>
          </div>

          <div class="form-floating mb-3">
            <input type="text" class="form-control" id="usuario" name="username" placeholder="Usuário" required />
            <label for="usuario"><i class="bi bi-person-circle text-primary"></i> Usuário</label>
          </div>

          <div class="form-floating mb-3">
            <input type="password" class="form-control" id="senha1" name="password" placeholder="Senha" required />
            <label for="senha1"><i class="bi bi-lock text-primary"></i> Senha</label>
          </div>

          <div class="form-floating mb-4">
            <input type="password" class="form-control" id="senha2" placeholder="Confirme a Senha" required />
            <label for="senha2"><i class="bi bi-shield-lock text-primary"></i> Confirme a Senha</label>
          </div>

          <div class="form-check mb-4">
            <input class="form-check-input" type="checkbox" id="termoUso" required />
            <label class="form-check-label" for="termoUso">
              Aceito os <a href="/html/termodeuso.html" target="_blank" class="text-primary">Termos de Uso</a>
            </label>
          </div>

          <button type="submit" class="btn btn-primary w-100 mb-3">
            Criar Conta <i class="bi bi-arrow-right-circle ms-1"></i>
          </button>

          <div class="text-center">
            <p class="text-muted mb-2">Já tem uma conta?</p>
            <a class="btn btn-outline-secondary w-100" href="/">
              <i class="bi bi-box-arrow-in-right me-1"></i> Fazer Login
            </a>
          </div>
        </form>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>

  <script>
    AOS.init({
      duration: 1000,
      once: true
    });

    // Controle dos passos do registro
    const progressLine = document.querySelector('.progress-line-fill');
    const progressSteps = document.querySelectorAll('.progress-step');
    const inputs = document.querySelectorAll('input[type="text"], input[type="email"], input[type="password"]');
    const termoUso = document.getElementById('termoUso');

    // Atualiza o progresso baseado nos campos preenchidos
    function updateProgress() {
      const totalFields = inputs.length;
      const filledFields = Array.from(inputs).filter(input => input.value.length > 0).length;
      let progress = Math.min(Math.floor((filledFields / totalFields) * 3), 3);
      
      // Se todos os campos estão preenchidos e o termo está aceito, marca como totalmente completo
      const allFieldsFilled = Array.from(inputs).every(input => input.value.length > 0);
      const isComplete = allFieldsFilled && termoUso.checked;
      
      // Atualiza a barra de progresso
      progressLine.style.width = filledFields === 0 ? '0%' : `${(progress / 3) * 100}%`;
      
      // Atualiza os círculos de progresso
      progressSteps.forEach((step, index) => {
        if (index === 0) {
          step.classList.add('active');
          if (filledFields > 0) {
            step.classList.add('completed');
          } else {
            step.classList.remove('completed');
          }
        } else if (index + 1 <= progress) {
          step.classList.add('active');
          if (isComplete || index + 1 < progress) {
            step.classList.add('completed');
          } else {
            step.classList.remove('completed');
          }
        } else {
          step.classList.remove('active', 'completed');
        }
      });
    }

    inputs.forEach(input => {
      input.addEventListener('input', updateProgress);
    });

    termoUso.addEventListener('change', updateProgress);
    progressSteps[0].classList.add('active');

    async function validateAndSubmit(event) {
      event.preventDefault();
      
      const password1 = document.getElementById('senha1').value;
      const password2 = document.getElementById('senha2').value;

      if (password1 !== password2) {
        Swal.fire({
          icon: 'error',
          title: 'Senhas não coincidem',
          text: 'Por favor, verifique se as senhas estão iguais.',
          confirmButtonColor: '#d33'
        });
        return false;
      }

      const formData = new FormData(event.target);
      const data = Object.fromEntries(formData);

      try {
        const response = await fetch('/register', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json'
          },
          body: JSON.stringify(data)
        });

        const result = await response.json();

        if (result.error) {
          Swal.fire({
            icon: 'error',
            title: 'Erro no Cadastro',
            text: result.message || 'Este nome de usuário já está cadastrado. Por favor, escolha outro.',
            confirmButtonColor: '#d33'
          });
          return false;
        }

        window.location.href = '/perfil';
      } catch (error) {
        Swal.fire({
          icon: 'error',
          title: 'Erro',
          text: 'Ocorreu um erro ao tentar fazer o cadastro. Tente novamente mais tarde.',
          confirmButtonColor: '#d33'
        });
        return false;
      }
    }
  </script>
</body>

</html>