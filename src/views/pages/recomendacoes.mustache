  <script src="https://cdn.jsdelivr.net/npm/apexcharts@3.45.2/dist/apexcharts.min.js"></script>

  <script>
    // Fun√ß√£o para formatar valores
    function formatarValor(valor, ehPopulacao = false) {
      if (ehPopulacao) {
        const numero = parseFloat(valor);
        if (numero >= 1000000) {
          return Math.floor(numero / 1000000) + ' milh√µes';
        } else if (numero >= 1000) {
          return Math.floor(numero / 1000) + ' mil';
        }
        return numero;
      }
      return parseFloat(valor).toLocaleString('pt-BR', { 
        style: 'decimal',
        minimumFractionDigits: 2, 
        maximumFractionDigits: 2 
      });
    }

    // Formatar todos os valores ao carregar a p√°gina
    document.addEventListener('DOMContentLoaded', function() {
      // Formatar valores monet√°rios
      document.querySelectorAll('.valor-formatado').forEach(elemento => {
        const valor = elemento.getAttribute('data-valor');
        elemento.textContent = formatarValor(valor);
      });

      // Formatar valores de popula√ß√£o
      document.querySelectorAll('.populacao-formatada').forEach(elemento => {
        const valor = elemento.getAttribute('data-valor');
        elemento.textContent = formatarValor(valor, true);
      });

      const countries = JSON.parse('{{{countriesJson}}}');
      console.log('Pa√≠ses carregados:', countries);
      
      // Preparar dados para os gr√°ficos
      const labels = countries.map(c => c.namePtBr);
      const salarios = countries.map(c => c.salaryByChosenProfession);
      const custos = countries.map(c => c.countryCostOfLiving);
      const liquidos = countries.map(c => c.countryDisposableIncome);
      const populacoes = countries.map(c => c.population);

      // Definindo cores padr√£o para usar em todos os gr√°ficos
      const chartColors = {
        primary: '#2E93fA',
        secondary: '#FF5252',
        success: '#66DA26'
      };

      // Gr√°fico de Barras - Compara√ß√£o Financeira
      const barOptions = {
        series: [{
          name: 'Sal√°rio M√©dio',
          data: salarios,
          color: chartColors.primary
        }, {
          name: 'Custo de Vida',
          data: custos,
          color: chartColors.secondary
        }, {
          name: 'Expectativa L√≠quida',
          data: liquidos,
          color: chartColors.success
        }],
        chart: {
          type: 'bar',
          height: 350,
          toolbar: {
            show: false
          }
        },
        plotOptions: {
          bar: {
            horizontal: false,
            columnWidth: '65%',
            borderRadius: 8,
            dataLabels: {
              position: 'top'
            }
          },
        },
        dataLabels: {
          enabled: true,
          formatter: function (val) {
            return "R$ " + formatarValor(val);
          },
          offsetY: -20,
          style: {
            fontSize: '12px',
            colors: ["#304758"]
          }
        },
        stroke: {
          show: true,
          width: 2,
          colors: ['transparent']
        },
        xaxis: {
          categories: labels,
          labels: {
            style: {
              fontSize: '13px'
            }
          }
        },
        yaxis: {
          title: {
            text: 'Valor em R$'
          },
          labels: {
            formatter: function (val) {
              return "R$ " + formatarValor(val);
            }
          }
        },
        fill: {
          opacity: 1
        },
        tooltip: {
          y: {
            formatter: function (val) {
              return "R$ " + formatarValor(val);
            }
          }
        },
        legend: {
          position: 'top',
          horizontalAlign: 'center',
          offsetY: 10,
          markers: {
            fillColors: [chartColors.primary, chartColors.secondary, chartColors.success]
          }
        },
        responsive: [{
          breakpoint: 768,
          options: {
            chart: {
              height: 500
            },
            plotOptions: {
              bar: {
                horizontal: true,
                dataLabels: {
                  position: 'right'
                }
              }
            },
            dataLabels: {
              offsetX: 10,
              offsetY: 0
            },
            xaxis: {
              categories: labels,
              labels: {
                style: {
                  fontSize: '13px'
                }
              }
            },
            yaxis: {
              labels: {
                style: {
                  fontSize: '13px'
                }
              }
            },
            legend: {
              position: 'bottom'
            }
          }
        }]
      };

      // Gr√°fico de Donut - Popula√ß√£o
      const donutOptions = {
        series: populacoes,
        chart: {
          type: 'donut',
          height: 350
        },
        labels: labels,
        colors: [chartColors.primary, chartColors.secondary, chartColors.success],
        plotOptions: {
          pie: {
            donut: {
              size: '70%',
              labels: {
                show: true,
                total: {
                  show: true,
                  label: 'Popula√ß√£o Total',
                  formatter: function (w) {
                    const total = w.globals.seriesTotals.reduce((a, b) => a + b, 0);
                    return formatarValor(total, true);
                  }
                },
                value: {
                  formatter: function (val) {
                    return formatarValor(val, true);
                  }
                }
              }
            }
          }
        },
        dataLabels: {
          enabled: true,
          formatter: function (val, opts) {
            return formatarValor(opts.w.config.series[opts.seriesIndex], true);
          }
        },
        legend: {
          position: 'bottom',
          offsetY: 0
        },
        tooltip: {
          y: {
            formatter: function (val) {
              return formatarValor(val, true);
            }
          },
          custom: function({ series, seriesIndex, w }) {
            return '<div class="custom-tooltip">' +
              '<span>' + w.config.labels[seriesIndex] + ': ' + formatarValor(series[seriesIndex], true) + '</span>' +
              '</div>';
          }
        },
        responsive: [{
          breakpoint: 480,
          options: {
            chart: {
              height: 300
            },
            legend: {
              position: 'bottom'
            }
          }
        }]
      };

      // Gr√°fico de Radar - √çndices de Qualidade de Vida
      const radarOptions = {
        series: countries.map(country => ({
          name: country.namePtBr,
          data: [
            country.indexQualityOfLife.purchasingPower,
            country.indexQualityOfLife.safetyIndex,
            country.indexQualityOfLife.healthCareIndex,
            country.indexQualityOfLife.trafficCommute,
            country.indexQualityOfLife.pollutionIndex
          ]
        })),
        chart: {
          height: 350,
          type: 'radar',
          toolbar: {
            show: false
          }
        },
        xaxis: {
          categories: [
            'Poder de Compra',
            'Seguran√ßa',
            'Sa√∫de',
            'Mobilidade',
            'Qualidade do Ar'
          ]
        },
        yaxis: {
          show: false,
          max: 200,
          min: 0,
          tickAmount: 8
        },
        fill: {
          opacity: 0.4
        },
        markers: {
          size: 4
        },
        plotOptions: {
          radar: {
            polygons: {
              strokeColors: '#e9e9e9',
              fill: {
                colors: ['#f8f8f8', '#fff']
              }
            }
          }
        },
        colors: [chartColors.primary, chartColors.secondary, chartColors.success],
        tooltip: {
          y: {
            formatter: function(val) {
              return Math.round(val) + ' pontos';
            }
          }
        }
      };

      // Gr√°fico de Evolu√ß√£o Salarial
      const salaryOptions = {
        series: [{
          name: 'In√≠cio de Carreira',
          data: countries.map(c => c.initialSalary),
          color: chartColors.primary
        }, {
          name: 'M√©dia',
          data: countries.map(c => c.salaryByChosenProfession),
          color: chartColors.secondary
        }, {
          name: 'Topo da Carreira',
          data: countries.map(c => c.lastSalary),
          color: chartColors.success
        }],
        chart: {
          type: 'bar',
          height: 350,
          toolbar: {
            show: false
          }
        },
        plotOptions: {
          bar: {
            horizontal: false,
            columnWidth: '65%',
            borderRadius: 8,
            dataLabels: {
              position: 'top'
            }
          },
        },
        dataLabels: {
          enabled: true,
          formatter: function (val) {
            return "R$ " + formatarValor(val);
          },
          offsetY: -20,
          style: {
            fontSize: '12px',
            colors: ["#304758"]
          }
        },
        stroke: {
          show: true,
          width: 2,
          colors: ['transparent']
        },
        xaxis: {
          categories: labels,
          labels: {
            style: {
              fontSize: '13px'
            }
          }
        },
        yaxis: {
          title: {
            text: 'Sal√°rio em R$'
          },
          labels: {
            formatter: function (val) {
              return "R$ " + formatarValor(val);
            }
          }
        },
        fill: {
          opacity: 1
        },
        tooltip: {
          y: {
            formatter: function (val) {
              return "R$ " + formatarValor(val);
            }
          }
        },
        legend: {
          position: 'top',
          horizontalAlign: 'center',
          offsetY: 10,
          markers: {
            fillColors: [chartColors.primary, chartColors.secondary, chartColors.success]
          }
        },
        responsive: [{
          breakpoint: 768,
          options: {
            chart: {
              height: 500
            },
            plotOptions: {
              bar: {
                horizontal: true,
                dataLabels: {
                  position: 'right'
                }
              }
            },
            dataLabels: {
              offsetX: 10,
              offsetY: 0
            },
            xaxis: {
              categories: labels,
              labels: {
                style: {
                  fontSize: '13px'
                }
              }
            },
            yaxis: {
              labels: {
                style: {
                  fontSize: '13px'
                }
              }
            },
            legend: {
              position: 'bottom'
            }
          }
        }]
      };

      // Gr√°fico de Linha - Temperatura M√©dia Mensal
      const climateOptions = {
        series: countries.map(country => ({
          name: country.namePtBr,
          data: country.climate
        })),
        chart: {
          height: 350,
          type: 'line',
          toolbar: {
            show: false
          },
          zoom: {
            enabled: false
          }
        },
        stroke: {
          curve: 'smooth',
          width: 3
        },
        colors: [chartColors.primary, chartColors.secondary, chartColors.success],
        xaxis: {
          categories: ['Jan', 'Fev', 'Mar', 'Abr', 'Mai', 'Jun', 'Jul', 'Ago', 'Set', 'Out', 'Nov', 'Dez'],
          title: {
            text: 'Meses'
          }
        },
        yaxis: {
          title: {
            text: 'Temperatura (¬∞C)'
          }
        },
        markers: {
          size: 4,
          hover: {
            size: 6
          }
        },
        tooltip: {
          y: {
            formatter: function(val) {
              return val + "¬∞C"
            }
          }
        },
        legend: {
          position: 'top',
          horizontalAlign: 'center',
          offsetY: 10
        }
      };

      // Renderizar os gr√°ficos
      const barChart = new ApexCharts(document.querySelector("#barChart"), barOptions);
      const donutChart = new ApexCharts(document.querySelector("#donutChart"), donutOptions);
      const radarChart = new ApexCharts(document.querySelector("#radarChart"), radarOptions);
      const salaryChart = new ApexCharts(document.querySelector("#salaryChart"), salaryOptions);
      const climateChart = new ApexCharts(document.querySelector("#climateChart"), climateOptions);

      barChart.render();
      donutChart.render();
      radarChart.render();
      salaryChart.render();
      climateChart.render();
    });
  </script>
</body>
</html>
